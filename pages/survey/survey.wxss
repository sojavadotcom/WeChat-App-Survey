.wrapper {
  background: #f0f0f0;
  height: 100%;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.sub-title {
  font-size: 33rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.container {
  background: white;
   padding: 50rpx 10rpx;
  margin: 50rpx; 
  margin-top: 20rpx;
  border-radius: 10px;
}

.section {
  margin: 30rpx auto;
}

.section__sub-title {
  font-size: 30rpx;
}

.choice {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.btn-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}